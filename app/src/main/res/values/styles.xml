<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextAppearance">@style/customActionBar</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>
    <style name="customActionBar" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/orange</item>
    </style>

    <!-- Animation for Dialogs-->
    <!--<style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_new</item>
    </style>-->

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
    </style>

    <style name="DefaultAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Auth Buttons -->
    <style name="authButton">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_plan</item>
        <item name="android:fontFamily">@font/expo_arabic_book</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- White Text Arabic -->
    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/expo_arabic_book</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="CustomEditTextHint">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
